{
  "name": "example",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@development-framework/dm-core": "link:../packages/dm-core",
    "@development-framework/blueprint": "link:../packages/blueprint",
    "@development-framework/dm-core-plugins": "link:../packages/dm-core-plugins",
    "@craco/craco": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-oauth2-code-pkce": "^1.10.1",
    "react-router-dom": "5.3.4",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.6",
    "typescript": "^4.8.4",
    "tsconfig-paths-webpack-plugin": "^4.0.0"
  },
  "scripts": {
    "start": "GENERATE_SOURCEMAP=false REACT_APP_DMSS_URL=http://localhost:5000  REACT_APP_DM_JOB_URL=http://localhost:5001 craco start",
    "build": "craco build",
    "test": "craco test",
    "eject": "craco eject",
    "build-all-packages": "for package in ../packages/*/; do echo $package && cd $package && yarn install --no-lockfile && yarn build && cd ../../example; done",
    "symlinks": "for package in ../packages/*/; do echo $package && cd $package && mkdir -p dist && cd dist && ln -sf ../src/index.tsx index.js && cd ../../../example; done",
    "remove-symlinks": "for package in ../packages/*/; do echo $package && rm -rf dist && cd ../example; done"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
