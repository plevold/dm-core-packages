{
  "type": "CORE:RecipeLink",
  "_blueprintPath_": "/plugins/grid/blueprints/OrderItem",
  "initialUiRecipe": {
    "name": "RecipeSelector",
    "type": "CORE:UiRecipe",
    "plugin": "recipe-selector",
    "config": {
      "type": "PLUGINS:dm-core-plugins/attribute-selector/RecipeSelectorConfig",
      "views": [
        {
          "type": "CORE:InlineRecipeViewConfig",
          "recipe": {
            "name": "List",
            "type": "CORE:UiRecipe",
            "plugin": "@development-framework/dm-core-plugins/generic-list",
            "dimensions": "*",
            "config": {
              "type": "PLUGINS:dm-core-plugins/generic-list/GenericListPluginConfig",
              "headers": ["name", "quantity", "type"],
              "showDelete": true,
              "expanded": false,
              "defaultView": {
                "type": "CORE:InlineRecipeViewConfig",
                "recipe": {
                  "type": "CORE:UiRecipe",
                  "name": "Edit",
                  "description": "Default edit",
                  "plugin": "@development-framework/dm-core-plugins/form"
                },
                "scope": "self"
              },
              "views": [
                {
                  "type": "CORE:ViewConfig",
                  "scope": "product"
                },
                {
                  "type": "CORE:InlineRecipeViewConfig",
                  "recipe": {
                    "type": "CORE:UiRecipe",
                    "name": "Edit",
                    "description": "Default edit",
                    "plugin": "@development-framework/dm-core-plugins/form"
                  },
                  "scope": "self"
                },
                {
                  "type": "CORE:InlineRecipeViewConfig",
                  "recipe": {
                    "type": "CORE:UiRecipe",
                    "name": "Yaml",
                    "description": "Yaml view",
                    "plugin": "@development-framework/dm-core-plugins/yaml"
                  },
                  "scope": "self"
                }
              ]
            }
          }
        },
        {
          "type": "CORE:InlineRecipeViewConfig",
          "recipe": {
            "name": "Table Edit",
            "type": "CORE:UiRecipe",
            "plugin": "@development-framework/dm-core-plugins/generic-table",
            "dimensions": "*",
            "config": {
              "type": "PLUGINS:dm-core-plugins/generic-list/GenericTablePluginConfig",
              "columns": ["name", "quantity", "type"],
              "showDelete": true
            }
          }
        },
        {
          "type": "CORE:InlineRecipeViewConfig",
          "recipe": {
            "name": "Table View",
            "type": "CORE:UiRecipe",
            "plugin": "@development-framework/dm-core-plugins/generic-table",
            "dimensions": "*",
            "config": {
              "type": "PLUGINS:dm-core-plugins/generic-list/GenericTablePluginConfig",
              "columns": ["name", "quantity", "type"],
              "showDelete": true,
              "editMode": false
            }
          }
        }
      ]
    }
  },
  "uiRecipes": [
    {
      "name": "Yaml",
      "type": "CORE:UiRecipe",
      "plugin": "@development-framework/dm-core-plugins/yaml"
    },
    {
      "name": "Form",
      "type": "CORE:UiRecipe",
      "plugin": "@development-framework/dm-core-plugins/form"
    },
    {
      "name": "List",
      "type": "CORE:UiRecipe",
      "plugin": "@development-framework/dm-core-plugins/generic-list",
      "dimensions": "*"
    },
    {
      "name": "List",
      "type": "CORE:UiRecipe",
      "plugin": "@development-framework/dm-core-plugins/generic-list",
      "dimensions": "*",
      "config": {
        "type": "PLUGINS:dm-core-plugins/generic-list/GenericListPluginConfig",
        "headers": ["name", "description"],
        "showDelete": true,
        "expanded": false
      }
    }
  ]
}
