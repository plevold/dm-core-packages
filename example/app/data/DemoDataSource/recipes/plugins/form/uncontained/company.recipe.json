          {
            "name": "trainee",
            "type": "PLUGINS:dm-core-plugins/form/fields/ObjectField",
            "uiRecipe": "defaultYaml",
            "functionality": {
              "type": "PLUGINS:dm-core-plugins/form/FormFunctionalityConfig",
              "open": false,
              "expand": true
            },
            "label": "The Trainee"
          },
          {
            "name": "description",
            "type": "PLUGINS:dm-core-plugins/form/fields/StringField",
            "widget": "TextareaWidget",
            "hideOptionalLabel": true,
            "readOnly": true,
            "tooltip": "tooltip"
          },
          {
            "name": "averageSalary",
            "type": "PLUGINS:dm-core-plugins/form/fields/NumberField",
            "hideOptionalLabel": true,
            "label": "Salary (avg)",
            "tooltip": "tooltip"
          }
        ],
        "fields": [
          "name",
          "averageSalary",
          "numberOfEmployees",
          "description",
          "ceo",
          "accountant",
          "assistant",
          "trainee"
        ]
      }
    }
