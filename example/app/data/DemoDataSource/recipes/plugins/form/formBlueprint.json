{
  "type": "CORE:RecipeLink",
  "_blueprintPath_": "/plugins/form/blueprints/FormBlueprint",
  "initialUiRecipe": {
    "name": "AttributeSelector",
    "type": "CORE:UiRecipe",
    "plugin": "@development-framework/dm-core-plugins/attribute-selector",
    "config": {
      "type": "PLUGINS:dm-core-plugins/attribute-selector/AttributeSelectorConfig",
      "childTabsOnRender": true,
      "asSidebar": false,
      "items": [
        {
          "type": "PLUGINS:dm-core-plugins/attribute-selector/AttributeSelectorItem",
          "view": {
            "type": "CORE:InlineRecipeViewConfig",
            "recipe": {
              "type": "CORE:UiRecipe",
              "name": "Edit",
              "description": "Default edit",
              "plugin": "@development-framework/dm-core-plugins/form"
            },
            "scope": "self"
          }
        }
      ]
    }
  },
  "uiRecipes": [
    {
      "name": "Edit",
      "type": "CORE:UiRecipe",
      "plugin": "@development-framework/dm-core-plugins/form",
      "category": "edit",
      "config": {
        "type": "PLUGINS:dm-core-plugins/form/FormInput",
        "attributes": [
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/StringField",
            "name": "type",
            "widget": "TypeWidget"
          },
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/StringField",
            "name": "aDate",
            "widget": "TextWidget",
            "format": "date-time"
          },
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/StringField",
            "name": "description",
            "widget": "TextareaWidget"
          },
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/StringField",
            "name": "aStringAsTextfield",
            "widget": "TextareaWidget"
          },
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/ObjectField",
            "name": "aNestedObject",
            "uiRecipe": "aRecipeName"
          },
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/StringField",
            "name": "blueprintPicker",
            "widget": "BlueprintPickerWidget"
          },
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/ObjectField",
            "name": "aNestedObjectWithCustomUI",
            "uiRecipe": "custom"
          },
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/StringField",
            "name": "blueprintPicker",
            "widget": "ObjectWidget"
          },
          {
            "type": "PLUGINS:dm-core-plugins/form/fields/ArrayField",
            "name": "listOfObjects",
            "widget": "TableWidget",
            "columns": ["name", "foo", "bar", "baz"]
          }
        ],
        "order": ["name", "type", "description", "aBool", "*"]
      }
    },
    {
      "name": "Yaml",
      "type": "CORE:UiRecipe",
      "plugin": "@development-framework/dm-core-plugins/yaml"
    }
  ]
}
